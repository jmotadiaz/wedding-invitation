  {...onIntersect(show(translate()))}
>
  <div class="px-5 transition-all">
    <h2 class="text-5xl font-hand text-sky-950 mb-5">
      Regalo
    </h2>
    <p class="mb-8">Si quieres tener un detalle con nosotros</p>
    <Collapsible>
      <p slot="trigger">NÃºmero de cuenta</p>
      <div class="pt-5" slot="content">
          {BANK_ACCOUNT}
      </div>
    </Collapsible>
    <div class="border-b-2 border-gray-200 w-1/3 mx-auto my-5"></div>
    <Collapsible>
      <p slot="trigger">Bizum</p>
      <div class="pt-5" slot="content">
          {PHONE_NUMBER}
      </div>
    </Collapsible>
  </div>
</div>
