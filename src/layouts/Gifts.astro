---
import Collapsible from "@components/Collapsible.astro";
import { onIntersect, show, translate } from "@utils";

const BANK_ACCOUNT = import.meta.env.BANK_ACCOUNT;
const PHONE_NUMBER = import.meta.env.PHONE_NUMBER;
---

<div
