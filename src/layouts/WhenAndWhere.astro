---
import { Image } from "astro:assets";
import { getImage, onIntersect, show, translate } from "@utils";
import frailesImg from "../assets/hacienda.jpg";
import Intersect from "../components/Intersect.astro";
---

<div class="relative px-4">
  <Intersect
    htmlTag="h2"
    tresHold={100}
    class="font-hand text-hand-xl text-sky-950 mb-10 transition-all ease-out duration-1000 opacity-0 translate-y-[100%]"
    {...onIntersect(show(translate()))}
  >
    Dónde y Cuándo
  </Intersect>
  <div class="image-container overflow-hidden">
    <Image
      {...getImage(frailesImg, "Hacienda Los Frailes de San Alberto")}
      class="w-full max-w-xl object-cover rounded-t-md"
    />
    <div
      class=`
        bg-white border-b border-l border-r border-gray-300 rounded-b-md shadow-md
        flex flex-col justify-center items-center p-10 mb-5
      `
    >
      <Intersect
        tresHold={100}
        class="transition-all ease-out duration-1000 opacity-0 translate-y-[50%]"
        {...onIntersect(show(translate()))}
      >
        <p class="text-hand-lg font-hand text-sky-950">Hacienda Los Frailes</p>
        <p class="text-hand-lg font-hand text-sky-950 mb-3">de San Alberto</p>
      </Intersect>
      <p class="mb-3 text-center">12:00 PM</p>
      <a
        href="https://www.google.com/maps/place/Hacienda+los+Frailes+de+San+Alberto/@37.1979631,-5.9244053,15z/data=!4m2!3m1!1s0x0:0xddf4a405f884e20b?sa=X&ved=1t:2428&ictx=111"
        class="text-sky-600 text-lg underline hover:text-blue-700 hover:cursor-pointer"
        >Ver Mapa</a
      >
    </div>
  </div>
</div>
