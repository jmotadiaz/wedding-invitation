---
import { ViewTransitions } from "astro:transitions";
import SpeedInsights from "@vercel/speed-insights/astro";
import BellandhaFont from "./fonts/Bellandha.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content="14 de Diciembre 2024" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="14 de Diciembre 2024" />
    <meta
      property="og:image"
      content="https://boda-rocioyjavi.vercel.app/portada.png"
    />
    <meta property="og:url" content="https://boda-rocioyjavi.vercel.app" />
    <meta property="og:type" content="website" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Moon+Dance&display=block"
    /> -->
    <BellandhaFont />
    <!-- <HighSpiritedFont /> -->
    <style is:global>
      .htmx-request .htmx-base {
        display: none;
      }
      .htmx-request .htmx-indicator {
        display: block;
      }
      .htmx-indicator {
        display: none;
      }
    </style>
    <ViewTransitions />
    <script
      is:inline
      defer
      src="https://unpkg.com/htmx.org@1.9.12"
      integrity="sha384-ujb1lZYygJmzgSwoxRggbCHcjc0rB2XoQrxeTUQyRjrOnlCoYta87iKBWq3EsdM2"
      crossorigin="anonymous"></script>
    <script>
      var processHtmx = function () {
        window.htmx?.process(document.body);
      };
      window.addEventListener("load", processHtmx);
      document.addEventListener("astro:after-swap", processHtmx);
    </script>
    <SpeedInsights />
  </head>
  <body>
    <slot />
  </body>
</html>
