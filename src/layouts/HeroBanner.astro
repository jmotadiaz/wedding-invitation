---
import imgLG from "../assets/florecitas-lg.webp";
import imgMD from "../assets/florecitas-md.webp";
import imgSM from "../assets/florecitas-sm.webp";
import imgXS from "../assets/florecitas-xs.webp";
---

<div class="relative bg-sky-950 w-full overflow-x-hidden">
  <picture>
    <source media="(max-width: 420px)" srcset={imgXS.src} />
    <source media="(max-width: 640px)" srcset={imgSM.src} />
    <source media="(max-width: 768px)" srcset={imgMD.src} />
    <img src={imgLG.src} alt="" class="absolute z-0 top-0 left-0 h-full max-w-none w-auto min-w-full opacity-40"/>
  </picture>
  <div
    class="relative z-1 py-10 flex flex-col justify-center items-center text-white"
  >
    <h1 class="text-lg mb-3 mt-[10%]">NOS CASAMOS</h1>
    <p class="text-9xl pt-5 self-stretch text-center font-title animate-ltr">
      Roc√≠o
    </p>
    <p class="text-6xl self-stretch text-center font-title ">y</p>
    <p class="text-9xl self-stretch text-center font-title animate-rtl">
      Javier
    </p>
    <p class="text-lg mt-12">14 DE DICIEMBRE 2024</p>
    <p class="mt-20">Desliza hacia abajo</p>
    <div class="animate-bounce w-10 h-10 mt-8">
      <svg
        data-slot="icon"
        fill="none"
        stroke-width="1.5"
        stroke="#fff"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m4.5 5.25 7.5 7.5 7.5-7.5m-15 6 7.5 7.5 7.5-7.5"></path>
      </svg>
    </div>
  </div>
</div>
