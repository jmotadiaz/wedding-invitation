---
import AccommodationInfo from "@components/AccommodationInfo.astro";
import { getGuest } from "@domain/Guest";
import { onIntersect, show, translate } from "@utils";

const id = Astro.params.id || "";
const guest = await getGuest(id);
---

<div
  class="flex flex-col justify-center items-center transition-all ease-out duration-1000 opacity-0 translate-y-1/3"
  {...onIntersect(show(translate()))}
>
  <h2 class="font-hand text-hand-xl mb-5">Hospedaje</h2>
  <div class="mb-5">
    <p>Si viajas para poder asistir</p>
    <p>a nuestra celebración,</p>
    <p>además de agradecértelo</p>
    <p>de todo corazón,</p>
    <p>te recomendamos un alojamiento</p>
    <p>con descuento especial para el evento</p>
  </div>
  <AccommodationInfo guest={guest} />
</div>
