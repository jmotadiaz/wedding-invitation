---
import Timer from "@components/Timer.astro";
import Almunia from "../assets/almunia.webp";
---
<style>
  .text-white {
    text-shadow: 1px 1px 2px #555;
  }
</style>
<div class="absolute top-0 left-0 h-full w-full overflow-hidden">
  <img src={Almunia.src} class="absolute top-[15%] left-0 w-full z-0 opacity-70">
</div>
<div class="countdown relative -top-9">
  <div class="duration-700" :class="shown ? 'opacity-1' : 'opacity-0'">
    <p class="text-lg mt-[-15%]">A veces lo que empieza como una</p>
    <p class="text-lg">locura se convierte en lo mejor de</p>
    <p class="text-lg mb-20">tu vida</p>
  </div>
  <div class="text-white">
    <p
      class="text-6xl font-hand animate-ttp mb-7 transition-all ease-in-out duration-700"
      :class="shown ? 'translate-0 opacity-1' : 'opacity-0 translate-y-[-50px]'"
    >
      Faltan
    </p>
    <Timer />
    <p
      class="text-lg mt-7 transition-all ease-in-out duration-700"
      :class="shown ? 'translate-0 opacity-1' : 'opacity-0 translate-y-[50px]'"
    >
      para nuestra boda
    </p>
  </div>
</div>
