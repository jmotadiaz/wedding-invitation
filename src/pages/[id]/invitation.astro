---
import Container from "@components/Container.astro";
import Layout from "@components/Layout.astro";
import Section from "@components/Section.astro";
import ConfigForm from "@components/sections/Confirm.astro";
import Countdown from "@components/sections/Countdown.astro";
import HeroBannerSection from "@components/sections/HeroBanner.astro";
import WhenAndWhere from "@components/sections/WhenAndWhere.astro";
import Gifts from "../../components/sections/Gifts.astro";
import Timeline from "../../components/sections/Timeline.astro";

const id = Astro.params.id as string;
---

<Layout title="Weding Invitation">
  <Container>
    <Section>
      <HeroBannerSection />
    </Section>
    <Section extraClass="bg-slate-100">
      <Countdown />
    </Section>
    <Section>
      <WhenAndWhere />
    </Section>
    <Section extraClass="bg-slate-100">
      <ConfigForm id={id} />
    </Section>
    <Section>
      <Gifts />
    </Section>
    <Section extraClass="items-stretch">
      <Timeline
    </Section>
  </Container>
</Layout>
