---
import AttendeesCheckboxList from "@components/AttendeesCheckboxList.astro";
import { getGuest } from "@domain/Guest";

export const partial = true;

const guest = await getGuest(`${Astro.params.id}`);
const declineInvitation = Boolean(
	Astro.url.searchParams.get("declineInvitation"),
);
---

{guest && <AttendeesCheckboxList guest={guest} declined={declineInvitation} />}
