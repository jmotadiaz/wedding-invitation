---
import type { Guest } from "@domain/Guest/model";
import ButtonWithLoading from "./ButtonWithLoading.astro";

export interface Props {
	guest: Guest;
}

const guest = Astro.props.guest;
---

<ButtonWithLoading
  hx-patch={`/${guest.uuid}/api/accommodation`}
  hx-target="closest .slide"
  hx-swap="outerHTML transition:true"
  hx-include="[name='wantAccommodation']"
>
  <input type="checkbox" name="wantAccommodation" checked class="hidden" />
  Quiero más información
</ButtonWithLoading>
