---
export interface Props {
	side: "left" | "right";
	type: "wedding" | "cocktail" | "celebration" | "dancing";
	delay: number;
}

const { type, side, delay } = Astro.props;
const transformInitial = side === "left" ? "-50%" : "50%";
---

<style>
  .timeline-item {
    align-self: center;
  }
  .wedding {
    grid-area: wedding;
  }
  .cocktail {
    grid-area: cocktail;
  }
  .celebration {
    grid-area: celebration;
  }
  .dancing {
    grid-area: dancing;
  }
</style>

<div
  class=`transition-all ease-out duration-700 timeline-item ${type}`
  :class=`shown ? 'translate-x-0 opacity-1' : 'opacity-0 translate-x-[${transformInitial}]'`
  style=`transition-delay: ${delay}ms;`
  >
  <slot />
</div>
