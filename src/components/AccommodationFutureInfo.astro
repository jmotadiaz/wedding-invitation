---
import type { Guest } from "@domain/Guest/model";
import ButtonWithLoading from "./ButtonWithLoading.astro";

export interface Props {
	guest: Guest;
}

const guest = Astro.props.guest;
---

<p class="mt-2 mb-4 font-semibold text-sky-950">En breve recibirá mas información</p>
<ButtonWithLoading
  hx-patch={`/${guest.uuid}/api/accommodation`}
  hx-target="#accommodation-info"
  hx-swap="outerHTML transition:true"
>
  No deseo alojamiento
</ButtonWithLoading>
