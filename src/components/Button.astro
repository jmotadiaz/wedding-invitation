---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"button"> {
	full?: boolean;
}

const { full = true, disabled, class: className, ...buttonProps } = Astro.props;
---

<button
  class={`
		border-2 border-sky-950 rounded-md
		font-bold text-sky-950 bg-sky-900/5
		${disabled ? "opacity-50" : "hover:bg-sky-900/[0.07] active:bg-sky-900/10"}
		py-2 px-4 ${full ? "w-full" : ""}
		cursor-pointer
		${className}
	`}
  {...buttonProps}
  disabled={disabled}
>
  <slot />
</button>
