---
import { onIntersect, show, translate } from "@utils";
---
<div class="flex justify-center" x-data="timer" x-init="init();">
  <div class="flex flex-col justify-center items-center px-3">
    <div
      class="overflow-hidden transition-all ease-out duration-1000 delay-300 opacity-0"
      {...onIntersect(show())}
    >
      <div
        class="transition-all ease-out duration-700 delay-300 translate-y-[100%]"
        {...onIntersect(show(translate()))}
      >
        <p class="text-xl " x-text="time().days"></p>
      </div>
    </div>
    <div
      class="overflow-hidden transition-all ease-out duration-1000 delay-300 opacity-0"
