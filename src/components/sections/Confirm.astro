---
import { getGuest } from "@domain/Guest";
import ConfirmForm from "../ConfirmForm.astro";
export interface Props {
	id: string;
}

const guest = await getGuest(Astro.props.id);
---

{ guest && <div
  class="flex flex-col justify-center items-center w-full relative -top-9"
>
  <h2 class="text-center">
    <div
      x-bind:class="shown ? 'translate-x-0 opacity-1' : 'opacity-0 translate-x-[50%]'"
      class="text-3xl font-hand mb-2 transition-all ease-in-out duration-700"
    >
      Invitacion para:
    </div>
    <div
      x-bind:class="shown ? 'translate-x-0 opacity-1' : 'opacity-0 translate-x-[-50%]'"
      class="text-4xl font-hand mb-4 transition-all ease-in-out duration-700"
    >
      {guest.name}
    </div>
  </h2>
	<ConfirmForm guest={guest} />
</div> }
